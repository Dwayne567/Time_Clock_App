@model FT_TTMS_WebApplication.Models.Job

@{
    ViewData["Title"] = "Delete Job";
}

<!-- Page Header -->
<h2>Delete Job</h2>

<!-- Confirmation Message -->
<h3>Are you sure you want to delete this?</h3>

<!-- Job Details Section -->
<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <!-- Job Number -->
        <dt class="col-sm-2">
            Job Number
        </dt>
        <dd class="col-sm-10">
            @Model.JobNumber
        </dd>
        <!-- Job Name -->
        <dt class="col-sm-2">
            Job Name
        </dt>
        <dd class="col-sm-10">
            @Model.JobName
        </dd>
    </dl>
    
    <!-- Delete Form -->
    <form asp-action="Delete" method="post">
        <!-- Hidden Field for Job ID -->
        <input type="hidden" asp-for="Id" />
        <!-- Delete Button -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <!-- Back to List Button -->
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>