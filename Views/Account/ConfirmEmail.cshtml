@model bool

<!-- Email Confirmation Section -->
<h1>Email Confirmation</h1>
@if (Model)
{
    <p>Your email has been confirmed successfully. You can now log in.</p>
    <p>
        <a asp-controller="Account" asp-action="Login">Return to Login</a>
    </p>
}
else
{
    <p>There was an error confirming your email. Please try again.</p>
}